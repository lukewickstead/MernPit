{
  "name": "mern-sand-pit",
  "version": "2.0.0",
  "description": "A sandpit for learning MERN",
  "main": "index.js",
  "engines": {
    "node": "12.x"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/client/src/setupTests.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "client/*",
      "dist/*"
    ],
    "delay": "2500"
  },
  "scripts": {
    "kill": "taskkill /im node.exe /F",
    "build": "concurrently \"npm run build-client\" \"npm run build-server\"",
    "build-client": "NODE_ENV=production webpack --mode production --config webpack.config.js",
    "build-server": "NODE_ENV=production webpack --mode production --config webpack-backend.config.js",
    "dev:build": "concurrently \"npm run dev:build-client\" \"npm run dev:build-server\"",
    "start": "NODE_ENV=production node ./server/bundle-back.js",
    "dev": "npm run dev:build-client && npm run dev:run-server ",
    "dev:build-client": "webpack --config webpack.config.js --mode development",
    "dev:build-server": "webpack --mode development --config webpack-backend.config.js",
    "dev:run-server": "nodemon --exitcrash --exec babel-node ./server/index.js",
    "dev:debug": "NODE_ENV=development node --inspect ./server/bundle-back.js",
    "lint": "eslint ./client ./server ./common --ext .js,.jsx",
    "test": "jest --runInBand",
    "test-watch": "jest --watch --runInBand",
    "test-client": "jest client/ --runInBand",
    "test-watch-client": "jest client/ --watch --runInBand",
    "test-server": "jest server/ --runInBand",
    "test-watch-server": "jest server/ --watch --runInBand",
    "test-coverage": "jest --coverage --runInBand",
    "test-file": "jest server/routes/surveyValidation.test.js --runInBand",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukewickstead/MernPit"
  },
  "keywords": [
    "MERN",
    "REACT"
  ],
  "author": "Luke Wickstead",
  "license": "MIT",
  "homepage": "https://github.com/lukewickstead/MernPit#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@types/react": "^16.9.19",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "file-loader": "^5.0.2",
    "jest": "^25.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.2",
    "react-styleguidist": "^10.6.2",
    "sass": "^1.25.0",
    "sass-loader": "^8.0.2",
    "sinon": "^8.1.1",
    "style-loader": "^1.1.3",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@sendgrid/mail": "^6.5.2",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.7.0",
    "core-js": "^3.6.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "fibers": "^4.0.2",
    "helmet": "^3.21.2",
    "history": "^4.10.1",
    "morgan": "^1.9.1",
    "path": "^0.12.7",
    "prop-types": "^15.7.2",
    "puppeteer": "^2.1.1",
    "react": "^16.12.0",
    "react-app-polyfill": "^1.0.6",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-router-redux": "^4.0.8",
    "react-transition-group": "^4.3.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "regenerator-runtime": "^0.13.3",
    "serve-favicon": "^2.5.0",
    "winston": "^3.2.1"
  }
}
