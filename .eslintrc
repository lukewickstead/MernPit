{
    "extends": [
       "airbnb",
       "plugin:jest/recommended",
       "plugin:jest/style",
       "plugin:promise/recommended",
       "plugin:sonarjs/recommended"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jest": true,
      "jest/globals": true
    },
    "parser": "babel-eslint",
    "plugins": ["jest", "promise", "sonarjs"],
    "rules": {
      "import/prefer-default-export": 0,
      "linebreak-style": 0,
      "max-len": ["error", { "code": 165, "ignoreTemplateLiterals": true, "ignoreStrings": true }],
      "no-multi-str": 0,
      "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1, "maxBOF": 1}],
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
  }